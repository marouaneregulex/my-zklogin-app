rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection "invites"
    match /invites/{inviteId} {
      // Permettre la lecture et l'écriture pour tous les utilisateurs authentifiés
      // En production, vous devriez ajouter des vérifications plus strictes
      allow read, write: if request.auth != null;
      
      // Alternative : permettre la lecture/écriture pour tous (développement uniquement)
      // allow read, write: if true;
    }
    
    // Règles pour la collection "vendors"
    match /vendors/{vendorId} {
      // Permettre la lecture et l'écriture pour tous les utilisateurs authentifiés
      allow read, write: if request.auth != null;
      
      // Alternative : permettre la lecture/écriture pour tous (développement uniquement)
      // allow read, write: if true;
    }
    
    // Par défaut, refuser tout accès aux autres collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

